@model Payment


<form method="post">
    <div class="border p-3">
        <div class="row pb-3">
            <h1 class="text-primary">Delete Payment</h1>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="PaymentDate"></label>
            <input type="text" asp-for="PaymentDate" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="DouDate"></label>
            <input type="text" asp-for="DouDate" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="UnitPrice"></label>
            <input type="text" asp-for="UnitPrice" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="MeterReadingStart"></label>
            <input type="text" asp-for="MeterReadingStart" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="MeterReadingEnd"></label>
            <input type="text" asp-for="MeterReadingEnd" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Total"></label>
            <input type="text" asp-for="Total" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input type="text" asp-for="Total" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 ">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Payment" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
